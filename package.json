{
  "name": "neochef",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "common"
  ],
  "scripts": {
    "build": "npm run build -w common && npm run build -w server && npm run build -w client",
    "dev": "docker compose -f docker-compose.dev.yml up",
    "dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "down": "docker compose -f docker-compose.dev.yml down",
    "logs": "docker compose -f docker-compose.dev.yml logs -f"
  }
}
