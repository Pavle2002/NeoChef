{
  "name": "neochef",
  "private": true,
  "author": "Pavle Velickovic",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pavle2002/Neo-Chef.git"
  },
  "workspaces": [
    "client",
    "server",
    "common",
    "core",
    "jobs"
  ],
  "scripts": {
    "build:server": "docker buildx build --platform linux/amd64 -t ghcr.io/pavle2002/neochef:latest -f server/Dockerfile . --push",
    "dev": "docker compose -f docker-compose.dev.yml up",
    "dev:build": "docker compose -f docker-compose.dev.yml up --build",
    "down": "docker compose -f docker-compose.dev.yml down",
    "logs": "docker compose -f docker-compose.dev.yml logs -f"
  }
}
