{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@config/*": ["src/config/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@services/*": ["src/services/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@routes/*": ["src/routes/*"],
      "@controllers/*": ["src/controllers/*"],
      "@utils/*": ["src/utils/*"],
      "@app-types/*": ["src/types/*"],
      "@errors/*": ["src/errors/*"],
      "@validation/*": ["src/validation/*"]
    }
  }
}
